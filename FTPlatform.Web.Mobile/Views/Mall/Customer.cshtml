@{
    ViewBag.Title = "申请售后";
    Layout = "~/Views/Shared/_LayoutWebpack.cshtml";
}
@section head{
    <link href="~/Content/css/gobel.css" rel="stylesheet" />
    <link href="~/Content/css/shop/product.css" rel="stylesheet" />
    <link href="~/Content/css/shop/buttonClass.css" rel="stylesheet" />
    <style type="text/css">
        .ImgUpDown {
            width: 3.7em;
            border: 1px dashed #ddd;
            margin-top: 10px;
        }

        .PitchA {
            border: #ff6525 solid 1px !important;
        }

        .layui-layer {
            background-color: #fff;
        }

        .layui-layer-hui .layui-layer-content {
            background-color: rgba(0,0,0,.6);
        }

        .upload_img > div.img-block span {
            margin-top: -3.1em;
            position: absolute;
            color: red;
            font-size: 24px;
            margin-left: -0.1em;
        }
    </style>
}
@section foot{
    <script src="~/Content/Plugins/layer/layui.all.js"></script>
    <script src="~/dist/mall.customer.bundle.js"></script>
    <script type="text/javascript">
        function ImgRemove(span) {
            $(span).parent().remove();
        }
    </script>
}
<header class="mui-bar mui-bar-nav head_box head-secd" style="border-bottom: #ddd solid 1px;">
    <a class="mui-icon mui-icon-arrowleft mui-icon-left-nav mui-pull-left" href="javascript:history.back(-1);"></a>
    <h1 class="mui-title">申请售后</h1>
</header>
<div class="mui-content l-scrollable">
    <input type="hidden" value="@ViewBag.Code" id="code" />
    <image-uploader ref="cusUpLoad"></image-uploader>
    <!--退换货-->
    <section class="goods-wrap">
        <div class="god-top">
            <div class="goods-btn">
                <a href="javascript:;" class="PitchA" applyType="1">退货</a>
                <a href="javascript:;" applyType="2">换货</a>
            </div>
            <div class="reason-text">
                <h4>退换货原因</h4>
                <textarea placeholder="请输入退换货原因" id="cause"></textarea>
            </div>
        </div>
        <div style="background: #f5f5f5; height: 10px;"></div>
        <!--上传凭证-->
        <div class="god-top">
            <div class="reason-text">
                <h4>上传凭证</h4>
                <div class="upload">
                    <div class="upload_bg">
                        <form enctype="multipart/form-data">
                            <div style="width:100%" id="imgAll" class="upload_img">
                                @*<div class="load-box" id="ImgUp" style="float:left;margin-left:2%">
                                        <img src="~/Content/image/shop/up.png" id="textfield">
                                        <input type="text" class="field" />
                                        <p>上传凭证<br>最多3张</p>
                                    </div>
                                    <div id="ImgUp" style="float:left;margin-left:2%">
                                        <img src="~/Content/image/shop/ball.png" class="ImgUpDown" />
                                    </div>*@
                            </div>
                            <button class="upload-btn" type="button" v-on:click="SubCancel" id="SubCancel">提交申请</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
