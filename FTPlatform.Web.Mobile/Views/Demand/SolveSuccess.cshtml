@{
    ViewBag.Title = "申请已提交";
    Layout = "~/Views/Shared/_LayoutWebpack.cshtml";
}

@section head{
    <link href="~/Content/css/pulli.css" rel="stylesheet"/>
    <link href="~/Content/css/demand/Successful.css" rel="stylesheet" />
}

<header class="mui-bar mui-bar-nav" style="background: #fff;">
    <a href="/demand/" class="mui-icon-arrowleft mui-icon mui-icon-left-nav mui-pull-left"></a>
    <h1 class="mui-title">我要解决</h1>
</header>
<div class="mui-content" style="background: #fff;">
    <div style="border-top:1px solid #ddd ;">
        <div class="success">
            <img src="~/Content/image/Solve_bg.png">
            <p class="p_text">您的解决申请已提交成功</p>
            <p class="p_text2">请等待对方确认</p>
        </div>
        <div class="btn-needs">
            <a id="btn_finddemand" href="/demand/"><button type="button" class="mui-btn">继续找寻需求</button></a>
            <a href="/expert/expersolutiondemand"><button type="button" class="mui-btn">查看我的对接</button></a>
        </div>
    </div>
</div>

<script>
    function GetParamUrl(name) {
        var reg = new RegExp('(^|&)' + name + '=([^&]*)(&|$)')
        var r = window.location.search.substr(1).match(reg)
        if (r != null) return decodeURIComponent(r[2]); return null
    }

    var istech = GetParamUrl('istech');
    if (!istech || istech == 'false') {
        document.getElementById('btn_finddemand').href = '/demand/companys';
    }
</script>