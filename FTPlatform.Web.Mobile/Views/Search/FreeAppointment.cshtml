@{
    ViewBag.Title = "免费预约";
    Layout = "~/Views/Shared/_LayoutWebpack.cshtml";
}
@section head{
    <link href="~/Content/css/search/FreeAppointment.css" rel="stylesheet" />
}


<header class="mui-bar mui-bar-nav" style="background: #fff;">
    <a class="mui-icon-arrowleft mui-icon mui-icon-left-nav mui-pull-left" href="javascript:history.go(-1);"></a>
    <h1 class="mui-title">免费预约</h1>
</header>
<div class="mui-content l-scrollable" style="background: #fff;" v-cloak>
    <div class="prompt">填写详细需求，让沟通更高效</div>
    <div class="information_box">
        <div class="name_title">
            <span style="color:red;float:left;display:block;margin-top:4px">*</span>
            <span>需求标题</span><input type="text" placeholder="请填写需求标题" v-model="model.title">
        </div>
        <div class="name_title">
            <span style="color:red;float:left;display:block;margin-top:4px">*</span>
            <span>所属领域</span><input type="text" placeholder="请填写所属领域" v-model="model.businessClassName">
        </div>
        <div class="description">
            <span style="color:red;float:left;display:block;margin-top:4px">*</span>
            <span class="description_title">需求描述</span>
            <textarea class="text" rows="5" required="required" placeholder="请输入您的具体问题描述" v-model="model.content"></textarea>
        </div>
    </div>
    <div class="need">
        <div class="quantities">
            <span style="color:red;float:left;display:block;margin-top:4px">*</span>
            <span>投入预算</span>
            <input type="text" v-model="model.targetAmount" placeholder="请输入投入预算" />
            @*<div class="mui-input-row mui-radio mui-left" style="width: 20%;float: right;">
                    <label>面议</label>
                    <input type="radio" v-model="model.targetAmount" value="0">
                </div>*@
        </div>
        <div class="quantities">
            <span style="color:red;float:left;display:block;margin-top:4px">&nbsp;&nbsp;</span>
            <span>称呼</span><input type="text" placeholder="请填写您的称呼" v-model="model.realName">
        </div>
        <div class="phone">
            <span style="color:red;float:left;display:block;margin-top:4px">*</span>
            <span>手机号</span><input type="text" placeholder="请填写手机号" v-model="model.phoneNum">
        </div>
    </div>
    <div class="Verification">
        <span style="color:red;float:left;display:block;margin-top:7px">*</span>
        <span>验证码</span><input type="text" style="float: left;text-align: left;" v-model="model.valCode" />
        <button type="button" class="mui-btn mui-btn-blue mui-btn-outlined" v-on:click="sendValCode">{{SendBtnText}}</button>
    </div>
    <div class="btn">
        <button type="button" class="mui-btn mui-btn-yellow" v-on:click="reservation">立即预约</button>
        <button type="button" class="mui-btn mui-btn-blue" v-on:click="closeReservation">暂不预约</button>
    </div>
</div>

@section foot{
    <script src="~/dist/search.freeappointment.bundle.js"></script>
}