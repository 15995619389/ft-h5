
@{
    ViewBag.Title = "我的预约";
    Layout = "~/Views/Shared/_LayoutWebpack.cshtml";
}
@section head{
    <link rel="stylesheet" href="/Content/css/myBusiness/myReservation.css" />
}
@section foot{
    <script src="~/dist/expert.minereservation.bundle.js"></script>
}
<header class="mui-bar mui-bar-nav">
    <a class="mui-icon-arrowleft mui-icon mui-icon-left-nav mui-pull-left" href="javascript:window.history.go(-1)"></a>
    <h1 class="mui-title">我的预约</h1>
</header>
<div class="mui-content" v-cloak>
    <ul class="reservation" style="height: 0.90rem;position: fixed;width: 100%;z-index: 9;background-color: #f5f5f5;">
        <li class="text_color" value="0">预约我的</li>
        <li value="1">我预约的</li>
    </ul>
    <scroller ref="scroller" v-bind:on-refresh="Refresh" v-bind:on-infinite="Append" class="mui-scroll" v-cloak>
        <div>
            <div>
                <div class="reservation_box" style="display: block;">
                    <ul class="my_one">
                        <li>
                            <span>姓名</span>
                            <span>手机号</span>
                            <span>预约时间</span>
                        </li>
                        <li v-for="mr in ReservationMe ">
                            <span>{{mr.RSenderUserModel?mr.RSenderUserModel.RealName:""}}</span>
                            <span>{{mr.RSenderUserModel?mr.RSenderUserModel.Mobile:""}}</span>
                            <span>{{mr.CreateTime|time}}</span>
                        </li>
                    </ul>
                </div>
                <div class="reservation_box">
                    <ul class="my_one">
                        <li>
                            <span>姓名</span>
                            <span>行业</span>
                            <span>预约时间</span>
                        </li>
                        <li v-for="rm in MineReservation">
                            <span>{{rm.RTargerUserModel?rm.RTargerUserModel.RealName:""}}</span>
                            <span>{{rm.BusCategory}}</span>
                            <span>{{rm.CreateTime|time}}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </scroller>
</div>
