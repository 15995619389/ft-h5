                恭喜您完成任务，完成最后一步登记，即可成为中级技术合伙人！
            </div>*@
        <input type="hidden" id="id" v-bind:value="agent.Id" />
        <div class="user_content">
            <ul class="mui-table-view">
                <li class="mui-table-view-cell">
                    <a class="mui-navigate-right" v-on:click="workAddressClick()">
                        <span class="oSpan">*</span>省市：
                        <input id="demo1" type="text" readonly="" placeholder="请选择地址" v-bind:value="pc">                       
                            <input id="address" type="hidden" v-bind:value="code"/>
                    </a>
                </li>
                <li class="mui-table-view-cell">
                    <a @*class="mui-navigate-right"*@>
                        <span class="oSpan">*</span>职称：
                        <input type="text" id="Positional" placeholder="职称"  maxlength="15s" v-bind:value="agent.Positional">
                    </a>
                </li>
                <li class="mui-table-view-cell">
                    <a @*class="mui-navigate-right"*@>
                        <span class="oSpan"></span>职务：
                        <input type="text" id="Position" placeholder="职务"  maxlength="10" v-bind:value="agent.Position">
                    </a>
                </li>
                @*<li class="oli">
                    <div class="odiv"><span class="oSpan" style="float: left;width: 6.5%;">*</span>是否有经纪人证书：</div>
                    <div class="radio">
                        <div class="mui-input-row mui-radio mui-left">
                            <label>有</label>
                            <input name="radio1" v-bind:checked="!(agentimg.AgentCertificate==null)" type="radio">
                        </div>
                        <div class="mui-input-row mui-radio mui-left">
                            <label>无</label>
                            <input name="radio1" v-bind:checked="agentimg.AgentCertificate==null" type="radio">
                        </div>
                    </div>
                </li>*@
                <li class="mui-table-view-cell">
                    <a class="">
                        <span class="oSpan"></span>证书号：
                        <input type="text" id="CertificateNo" placeholder="请输入您的证件号码" class="number" style="width: 67%;margin-top: 0.20rem;" />
                    </a>
                </li>
            </ul>
        </div>
        <div class="upload">
            <div class="upload_bg">
                <img src="/Content/image/camera.png" id="AgentCertificate">
                <input type="file" name="fileField" class="file" id="fileField" size="28" @*accept="image/*"*@ />
            </div>
            <span class="text_span">点击上传证书</span>
        </div>
        <ul class="location">
            <li class="oli">
                <div class="odiv"><span class="oSpan" style="float: left;width: 6.5%;">*</span>是否愿意成为技术供方：</div>
                <div class="radio">
                    <div class="mui-input-row mui-radio mui-left ">
                        <label>是</label>
                        <input name="radio2" type="radio" v-bind:checked="agent.IsSupplier" value="1">
                    </div>
                    <div class="mui-input-row mui-radio mui-left">
                        <label>否</label>
                        <input name="radio2" type="radio" v-bind:checked="!agent.IsSupplier" value="0">
                    </div>
                </div>
            </li>
            <li class="mui-table-view-cell">
                <span class="oSpan"></span>通讯地址：
                <input type="text" id="Address" v-bind:value="agent.Address" placeholder="请输入通讯地址" class="number" style="width: 67%;margin-top: 0.20rem;" />
            </li>
        </ul>
        <div class="synopsis">
            <div class="field_box">
                <div class="field_title">
                    个人简介：
                </div>
                <div class="field_text">
                    <textarea name="" id="PerProfile" rows="" cols="" placeholder="">{{agent.PerProfile}}</textarea>
                </div>
            </div>
            <div class="field_prompt">
                <span class="prompt_span">!</span>
                <span class="prompt_span2">请输入0-500个字</span>
            </div>
        </div>
        <div class="science">
            <div class="field_box">
                <div class="field_title">
                    <span class="oSpan" style="float: left;width: 4.5%;">*</span>技术能力简介：
                </div>
                <div class="field_text">
                    <textarea name="" id="TechnicalAbility" rows="" cols="" placeholder="">{{agent.TechnicalAbility}}</textarea>
                </div>
            </div>
            <div class="field_prompt">
                <span class="prompt_span">!</span>
                <span class="prompt_span2">请输入0-500个字</span>
            </div>
        </div>
        <div class="submit">
            <button type="button" class="mui-btn mui-btn-blue mui-btn-block" v-on:click="submit()">提&nbsp;&nbsp;交</button>
        </div>
    </div>
    </div>
    <!--------地区选择-------->
    <div class="address-box" style="display:none">
        <header class="mui-bar mui-bar-nav" style="background: #efefef;">
            <a class="mui-icon-arrowleft mui-icon mui-icon-left-nav mui-pull-left" id="addressBack"></a>
            <h1 class="mui-title">选择工作地址</h1>
        </header>
        <div class="mui-content" style="background: #fff;">
            <input id="parentid" type="hidden"/>
            <ul class="head-address-ul" id="headAddressUl">
                <li class="head-address-li"><i class="border"></i>请选择</li>
                <li style="color: #f23030;"><i></i></li>
            </ul>
            <div class="address-content" id="addressContentDiv">
                <ul class="address-ul provice"></ul>
                <ul class="area" style="width: 0%;"></ul>
            </div>
        </div>
    </div>
    @*图片裁剪框*@
    <div id="crop-avatar" class="pop pub_suc_pop" style="display:none">
        <div class="pop_bd" style="text-align:center">
            <div class="modal fade" id="avatar-modal" aria-hidden="true" aria-labelledby="avatar-modal-label" role="dialog" tabindex="-1">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <form class="avatar-form" action="/agent/uploadimg" enctype="multipart/form-data" method="post">
                            <div class="modal-body">
                                <div class="avatar-body">
                                    <div class="avatar-upload">
                                        <input class="avatar-src" name="avatar_src" type="hidden">
                                        <input class="avatar-data" name="avatar_data" type="hidden">
                                    </div>
                                    <div class="row uplow">
                                        <div style="width:100%;float:left;padding:10px;box-sizing: border-box;">

                                            <div class="avatar-wrapper"></div>
                                        </div>
                                    </div>
                                    <div class="btnright">
                                        <a href="javascript:" class="conmit"></a>
                                        <a href="javascript:" class="cancel"></a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="loading" aria-label="Loading" role="img" tabindex="-1"></div>
        </div>
    </div>
  
